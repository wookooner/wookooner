{
  "manifest_version": 3,
  "name": "Personal Digital Trace Manager",
  "version": "0.1.0",
  "description": "Local-first digital footprint manager. Collects domain visits locally.",
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "PDTM"
  }
}