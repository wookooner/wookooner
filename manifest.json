
{
  "manifest_version": 3,
  "name": "Personal Digital Trace Manager",
  "version": "0.5.0",
  "description": "Local-first digital footprint manager. Collects domain visits locally.",
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "PDTM"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content_probe.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content/saml_detector.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
